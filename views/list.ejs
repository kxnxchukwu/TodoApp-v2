<%- include("header") -%>
<div class="box" id="heading">
        <h1> <%= listTitle %> </h1>
</div>
    
<div class="box">
        <% newListItem.forEach( function (item) { %>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" name="checkbox" value="<%= item._id %>" onchange="this.form.submit()">
                    <p><%= item.name %></p>
                </div>
                    <input type="hidden"name="listTitle" value=<%= listTitle %>>
            </form>
        <% }) %>

        <form class="item" action="/" method="POST">
            <input type="text" name='nextitem' class="" id="nexttodo" placeholder="Enter Your Next Item" autocomplete="off">
            <button type="submit" name="listTitle" value=<%= listTitle %>>+</button>
        </form>   
</div>
<%- include("footer") -%>
